<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        style="@style/BarakahCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            style="@style/BarakahCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/event_image"
                android:paddingBottom="0dp"
                android:paddingLeft="@dimen/card_items_padding"
                android:paddingRight="@dimen/card_items_padding"
                android:paddingTop="@dimen/card_items_padding">

                <TextView
                    android:id="@+id/event_title"
                    style="@style/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Event Title is verrrry long and two linded" />

                <TextView
                    android:id="@+id/event_date"
                    style="@style/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_title"
                    android:text="Sep 14th 2015" />

                <TextView
                    android:id="@+id/event_time"
                    style="@style/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_date"
                    android:text="8:00 pm" />

                <TextView
                    android:id="@+id/event_location"
                    style="@style/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_time"
                    android:text="640 W Irving Park Rd. 60613 Chicago Il" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/event_image"
                style="@style/BarakahCardImage"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>